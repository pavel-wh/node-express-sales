<div class="row">
    <div class="col s12">
        <div id="login" class="col s6 offset-s3">
            {{#if error}}
            <p class="alert">{{error}}</p>
            {{/if}}
            <h3>Задать новый пароль</h3>
            <form action="/auth/reset" method="post">
                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label class="active" for="password">Новый пароль</label>
                    <span class="helper-text" data-error="Поле не должно быть пустым" data-success="Готово">Введите новый пароль</span>
                </div>
                <input type="hidden" name="_csrf" value="{{ csrf }}">
                <input type="hidden" name="userId" value="{{ userId }}">
                <input type="hidden" name="token" value="{{ token }}">
                <button type="submit" class="btn btn-primary">Обновить</button>
            </form>
        </div>
    </div>
</div>